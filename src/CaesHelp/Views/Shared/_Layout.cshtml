@using CaesHelp.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CaesHelp</title>

    <environment names="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css" />
        <!-- <link rel="stylesheet" href="https://ucdcdn.azureedge.net/public/ucdavis.1.0.7.css" /> -->
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
        <link rel="stylesheet" href="~/dist/site.min.css" asp-append-version="true" />
        <!-- <link rel="stylesheet" href="https://ucdcdn.azureedge.net/public/ucdavis.1.0.7.css" /> -->
    </environment>

    <!-- <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/vendor.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/app.min.css" asp-append-version="true" />
    </environment> -->
    @RenderSection("Styles", required: false)
</head>
<body>
  <div class="page-wrap">
    <header class="text-center">
        <h1 asp-area="" asp-controller="Home" asp-action="Index">CAES Help</h1>
          @if (User.Identity.IsAuthenticated)
          {
              <div class="discreet">
                  <span>@User.GetNameClaim()</span> •
                  <a asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                  Sign out
                  </a>
              </div>
          }
    </header>
    <div class="container">
      @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string))
      {
          <div class="container">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button> @TempData["ErrorMessage"]
              </div>
          </div>
      }
      @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
      {
          <div class="container">
              <div class="alert alert-info">
                  <button type="button" class="close" data-dismiss="alert">×</button> @TempData["Message"]
              </div>
          </div>
      }
      <main role="main" class="pb-3">@RenderBody()
      </main>
    </div>

  </div>

    <footer class="container text-center">

    <span class="discreet">&copy; Copyright 2000-
        <script language="JavaScript" type="text/javascript">
        now = new Date
        theYear = now.getYear()
        if (theYear < 1900)
            theYear = theYear + 1900
        document.write(theYear)
        </script>
        The Regents of the University of California, Davis campus. All rights reserved.
          <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </span>



    </div>





    </footer>

    <environment names="Development">
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.js"></script>
        <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </environment>

    <script src="~/dist/vendor.js" asp-append-version="true"></script>
    <script src="~/dist/app.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
